# Docker Compose for {{projectName}}
# Generated by @volt.js/cli

version: '3.8'

services:
{{#if features.store}}

  redis:
    image: redis:7-alpine
    ports:
      - "6379:6379"
    environment:
      REDIS_PASSWORD: 
    volumes:
      - redis_data:/data
{{/if}}
{{#if (ne database.provider 'none')}}
{{#if (eq database.provider 'postgresql')}}

  postgres:
    image: postgres:16-alpine
    ports:
      - "5432:5432"
    environment:
      POSTGRES_DB: ${DB_NAME}
      POSTGRES_USER: ${DB_USER}
      POSTGRES_PASSWORD: ${DB_PASSWORD}
    volumes:
      - postgres_data:/var/lib/postgresql/data
{{/if}}
{{#if (eq database.provider 'mysql')}}

  mysql:
    image: mysql:8.0
    ports:
      - "3306:3306"
    environment:
      MYSQL_DATABASE: ${DB_NAME}
      MYSQL_USER: ${DB_USER}
      MYSQL_PASSWORD: ${DB_PASSWORD}
      MYSQL_ROOT_PASSWORD: ${DB_PASSWORD}
    volumes:
      - mysql_data:/var/lib/mysql
{{/if}}
{{/if}}

{{#if (or features.store (ne database.provider 'none'))}}
volumes:
{{#if features.store}}
  redis_data:
{{/if}}
{{#if (eq database.provider 'postgresql')}}
  postgres_data:
{{/if}}
{{#if (eq database.provider 'mysql')}}
  mysql_data:
{{/if}}
{{/if}}