# Welcome to Volt.js - The feature-first framework
# for building modern web applications.

#------------------------------------------#
#           DATABASE CONNECTION             #
#------------------------------------------#
{{#if (eq database.provider 'postgresql')}}
DATABASE_URL="postgresql://docker:docker@localhost:5432/docker?schema=public"
{{else if (eq database.provider 'mysql')}}
DATABASE_URL="mysql://docker:docker@localhost:3306/docker"
{{else if (eq database.provider 'sqlite')}}
DATABASE_URL="file:./{{projectName}}.db"
{{else}}
# DATABASE_URL="your-database-url-here"
{{/if}}

#------------------------------------------#
#           APPLICATION SETUP               #
#------------------------------------------#
# Name of your application
VOLT_APP_NAME={{projectName}}

{{#if (eq framework 'nextjs')}}
# URL where your app will be running
NEXT_PUBLIC_VOLT_API_URL='http://localhost:3000/'

# Path where your API will be running
NEXT_PUBLIC_VOLT_API_BASE_PATH=/api/v1
{{/if}}

# Secret key for JWT (Replace this with a random string)
VOLT_APP_SECRET=your_random_secret_key

# Application environment (development, production, test)
NODE_ENV="development"

{{#if features.store}}
# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379
{{/if}}

{{#if features.jobs}}
# Job queue prefix
VOLT_JOBS_QUEUE_PREFIX=volt
{{/if}}

{{#if features.mcp}}
# MCP server base path
VOLT_MCP_SERVER_BASE_PATH=/api/mcp

# MCP session timeout in ms
VOLT_MCP_SERVER_TIMEOUT=3600000
{{/if}}

{{#if features.logging}}
# Logging level (debug, info, warn, error)
VOLT_LOG_LEVEL=info
{{/if}}

{{#if features.telemetry}}
# Enable telemetry tracing
VOLT_TELEMETRY_ENABLE_TRACING=true

# Enable telemetry metrics
VOLT_TELEMETRY_ENABLE_METRICS=true

# Enable telemetry metrics
VOLT_TELEMETRY_ENABLE_EVENTS=true

# Enable telemetry metrics
VOLT_TELEMETRY_ENABLE_CLI_INTEGRATION=true
{{/if}}

{{#if (eq database.provider 'postgresql')}}
# PostgreSQL connection string
DATABASE_URL=postgresql://docker:docker@localhost:5432/docker

# Database host
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database name
DB_NAME=docker

# Database user
DB_USER=docker

# Database password
DB_PASSWORD=docker
{{else if (eq database.provider 'mysql')}}
# MySQL connection string
DATABASE_URL=mysql://docker:docker@localhost:3306/docker

# Database host
DB_HOST=localhost

# Database port
DB_PORT=3306

# Database name
DB_NAME=docker

# Database user
DB_USER=docker

# Database password
DB_PASSWORD=docker
{{/if}}